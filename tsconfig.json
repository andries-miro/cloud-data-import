{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"],
			"tests/*": ["../tests/*"]
		},
		"types": ["jest"],
		"outDir": "dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts", "tests/**/*.ts"],
	"exclude": ["node_modules"]
}
